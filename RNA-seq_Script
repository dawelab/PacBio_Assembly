#tophat 
#!/bin/bash
cd /home/student/binf8940/student_data/grp1/new-gff-fa
export LD_LIBRARY_PATH=/usr/local/boost/1.54.0/gcc447/lib:/usr/local/gcc/4.7.1/lib:/usr/local/gcc/4.7.1/lib64:${LD_LIBRARY_PATH}
time /usr/local/tophat/latest/bin/tophat -p 4 -G ./chnewtu502.gtf GCF_000006425.1_ASM642v1_genomic /home/student/binf8940/student_data/grp1/final/PO_ChominisTU502SRR1183950_1.fastq /home/student/binf8940/student_data/grp1/final/PO_ChominisTU502SRR1183950_2.fastq  
